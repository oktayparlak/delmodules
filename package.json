{
  "name": "delmodules",
  "version": "2.0.1",
  "description": "Recursively delete all node_modules folders in a directory",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "delmodules": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "start": "node dist/index.js",
    "dev": "tsc --watch"
  },
  "keywords": [
    "node_modules",
    "cleanup",
    "delete",
    "recursive",
    "typescript",
    "yarn"
  ],
  "author": "Oktay",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "rimraf": "^5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oktayparlak/delmodules.git"
  },
  "bugs": {
    "url": "https://github.com/oktayparlak/delmodules/issues"
  },
  "homepage": "https://github.com/oktayparlak/delmodules#readme",
  "engines": {
    "node": ">=12.0.0"
  }
}
